{
  "Description": " - Amazon Neptune IAM resources",
  "Parameters": {
    "InfrastructureID": {
      "Description": "Infrastructure ID",
      "Type": "String",
      "AllowedPattern": "[-a-z0-9]+",
      "MaxLength": 50
    }
  },
  "Resources": {
    "NeptuneEC2ClientRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "NeptuneAccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "NeptuneAccessPolicy",
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "iam:GetAccountSummary",
                "iam:ListAccountAliases",
                "iam:PassRole"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      },
      "DependsOn": [
        "NeptuneEC2ClientRole"
      ]
    },
    "NeptuneIAMAuthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "NeptuneIAMAuthPolicy",
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "neptune-db:*"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:neptune-db:",
                    {
                      "Ref": "AWS::Region"
                    },
                    ":",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    ":*/*"
                  ]
                ]
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneEC2ClientRole"
          }
        ]
      }
    },
    "NeptuneLoadFromS3Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "rds.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "NeptuneLoadFromS3Policy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "NeptuneLoadFromS3Policy",
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "NeptuneLoadFromS3Role"
          }
        ]
      }
    },
    "NeptuneWorkloadLambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/neptune-workload:*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ec2:CreateNetworkInterface",
                    "ec2:DescribeNetworkInterfaces",
                    "ec2:DeleteNetworkInterface"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:neptune-workload*"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "SageMakerExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "sagemaker.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "NeptuneWorkloadManagerLambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/neptune-workload:*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:GetFunctionConfiguration",
                    "lambda:UpdateFunctionConfiguration",
                    "lambda:InvokeFunction"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:neptune-workload*"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "NeptuneLoadFromS3RoleARN": {
      "Description": "Neptune IAM role for loading data from S3",
      "Value": {
        "Fn::GetAtt": [
          "NeptuneLoadFromS3Role",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneLoadFromS3RoleARN"
        }
      }
    },
    "NeptuneEC2InstanceProfile": {
      "Description": "Neptune EC2 instance profile",
      "Value": {
        "Ref": "NeptuneEC2InstanceProfile"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneEC2InstanceProfile"
        }
      }
    },
    "NeptuneWorkloadLambdaExecutionRoleARN": {
      "Description": "NeptuneWorkload Lambda IAM execution role",
      "Value": {
        "Fn::GetAtt": [
          "NeptuneWorkloadLambdaExecutionRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneWorkloadLambdaExecutionRoleARN"
        }
      }
    },
    "NeptuneWorkloadManagerLambdaExecutionRoleARN": {
      "Description": "NeptuneWorkloadManager Lambda IAM execution role",
      "Value": {
        "Fn::GetAtt": [
          "NeptuneWorkloadManagerLambdaExecutionRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-NeptuneWorkloadManagerLambdaExecutionRoleARN"
        }
      }
    },
    "SageMakerExecutionRoleARN": {
      "Description": "SageMaker IAM execution role",
      "Value": {
        "Fn::GetAtt": [
          "SageMakerExecutionRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${InfrastructureID}-SageMakerExecutionRoleARN"
        }
      }
    }
  }
}